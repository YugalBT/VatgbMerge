                        <a class="nav-link p-0" href="#"><img src="~/Image/help.png" /></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="d-flex">
    <div id="sidebar-wrapper" class="side_bar_custom">
        <div class="mt-4">
            <a input type="submit" name="ctl00$ctl00$GB_Reg_Parent_Mstr_ContPlaceHolder$btnNewSection" value="New Batch" id="GB_Reg_Parent_Mstr_ContPlaceHolder_btnNewSection" class="btn-no-style" asp-action="AddFrgnCheck">New Batch</a>
            <a input type="submit" name="ctl00$ctl00$GB_Reg_Parent_Mstr_ContPlaceHolder$btnUpdateSection" value="Update Batch" id="GB_Reg_Parent_Mstr_ContPlaceHolder_btnUpdateSection" class="btn-no-style" asp-action="UpdateFrgnCheck">Update Batch</a>
            <a input type="submit" name="ctl00$ctl00$GB_Reg_Parent_Mstr_ContPlaceHolder$btnViewSection" value="View Batch" id="GB_Reg_Parent_Mstr_ContPlaceHolder_btnViewSection" class="btn-no-style" asp-controller="frgnChks" asp-action="View">View Batch</a>
        </div>
    </div>
    <div class="right_side_content bg-lightorangecolor">
        <br />
        <h2 style="text-align:center;color:#b46000">New Foreign Checks Batch</h2>
        <br />
        <br />
        <div>
            <div class="row" style="text-align:center">
                <form asp-action="AddFrgnCheck" method="post">
                    <div class="row align-items-end">
                        <input type="hidden" asp-for="BatchId" />
                        <input type="hidden" asp-for="TotalAmount" />
                        <div class="col-3">
                            <div class="form-group">
                                <label class="form-label">Banks</label>
                                <select class="form-select" asp-for="BankId"
                                        asp-items="@(new SelectList(Model.BanksList,"BankId","BankName"))">
                                    <option value="">----Select Banks-----</option>
                                </select>
                            </div>

                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label class="form-label" asp-for="DateRecived">Date From</label>
                                <input type="date" asp-for="DateRecived" class="form-control" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="TotalAmount" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">$</span>
                                    <input value="@Model.TotalAmount" asp-for="TotalAmount" class="form-control" aria-describedby="basic-addon1" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <button type="submit" id="savBatchbtn" name="actionbtn" value="batchHeader" class="btn btn-primary">Save Batch Header</button>
                        </div>
                    </div>
                    <div class="row">
                        <span asp-validation-for="BankId" class="text-danger col-3"></span>
                        <span asp-validation-for="DateRecived" class="text-danger col-3"></span>
                        <span asp-validation-for="TotalAmount" class="text-danger col-3"></span>
                        <span class="col-3"></span>

                    </div>
                    <div class="spl">

                        <div class="demo">
                            @{
                                if (Model.BatchId > 0)
                                {
                                    <button type="button" id="btnAdd" class="buttonRemoveCss" onclick="showdiv()">Add New Check</button>
                                }
                            }
                            <a href="" class="text-end">Refresh</a>
                        </div>


                        @if (Model.BatchId > 0)
                        {
                            <div class="b-demo-content">
                                <div class="row mb-3 data_grp" style="display: none;" id="AddfrgnCheck">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="CheckNumber"></label>
                                            <input asp-for="CheckNumber" class="form-control" />
                                            <span asp-validation-for="CheckNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="PayerAcctNumber"></label>
                                            <input asp-for="PayerAcctNumber" class="form-control" />
                                            <span asp-validation-for="PayerAcctNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="PayerAcctName"></label>

                                            <input asp-for="PayerAcctName" class="form-control" />
                                            <span asp-validation-for="PayerAcctName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="DepositAcctNumber"></label>

                                            <input asp-for="DepositAcctNumber" class="form-control" />
                                            <span asp-validation-for="DepositAcctNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="DepositAcctName"></label>

                                            <input asp-for="DepositAcctName" class="form-control" />
                                            <span asp-validation-for="DepositAcctName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label" asp-for="CheckAmount"></label>

                                            <input asp-for="CheckAmount" class="form-control" />
                                            <span asp-validation-for="CheckAmount" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group text-start">
                                            <button type="submit" name="actionbtn" value="saveCheck" class="btn btn-primary sub_btn">Save Check</button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="tblbg">
                                <table class="table table-striped" id="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Check Number</th>
                                            <th scope="col">Payer Account</th>
                                            <th scope="col">Payer Name</th>
                                            <th scope="col">Deposit Account</th>
                                            <th scope="col">Depositor's Name</th>
                                            <th scope="col">Check Amount</th>
                                            <th scope="col">#</th>
                                        </tr>
                                        @* <label class="form-label checkHeader">CheckNumber</label>
                                    <label class="form-label checkHeader">Payer Account</label>
                                    <label class="form-label checkHeader">Payer Name</label>
                                    <label class="form-label checkHeader">Deposit Account</label>
                                    <label class="form-label checkHeader">Depositor's Name</label>
                                    <label class="form-label checkHeader">Check Amount</label> *@

                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.checksList != null)
                                            {
                                                foreach (var item in Model.checksList)
                                                {
                                                    <tr>
                                                        <td>@item.CheckNumber</td>
                                                        <td>@item.PayerAcctNumber</td>
                                                        <td>@item.PayerAcctName</td>
                                                        <td>@item.DepositAcctNumber</td>
                                                        <td>@item.DepositAcctName</td>
                                                        <td>@item.CheckAmount</td>
                                                        <td><a href="">edit</a></td>
                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script asp-append-version="true" src="~/js/FrgnCheck.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}




