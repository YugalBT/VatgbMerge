</div>

<div class="d-flex">
    <div id="sidebar-wrapper" class="side_bar_custom">
        <div class="mt-4">
            <a input type="submit" name="ctl00$ctl00$GB_Reg_Parent_Mstr_ContPlaceHolder$btnNewSection" value="New Batch" id="GB_Reg_Parent_Mstr_ContPlaceHolder_btnNewSection" class="btn-no-style" asp-action="AddFrgnCheck">New Batch</a>
            <a input type="submit" name="ctl00$ctl00$GB_Reg_Parent_Mstr_ContPlaceHolder$btnUpdateSection" value="Update Batch" id="GB_Reg_Parent_Mstr_ContPlaceHolder_btnUpdateSection" class="btn-no-style" asp-action="UpdateFrgnCheck">Update Batch</a>
            <a input type="submit" name="ctl00$ctl00$GB_Reg_Parent_Mstr_ContPlaceHolder$btnViewSection" value="View Batch" id="GB_Reg_Parent_Mstr_ContPlaceHolder_btnViewSection" class="btn-no-style" asp-action="ViewForeignCheck">View Batch</a>
        </div>
    </div>
    <div class="right_side_content bg-lightorangecolor">
        <br />
        <h2 style="text-align:center;color:#b46000">New Foreign Checks Batch</h2>
        <br />
        <br />
        <div>
            <div class="row" style="text-align:center">
                <form asp-action="AddFrgnCheck" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row align-items-end">
                        <div class="col-3">
                            <div class="form-group">
                                <label>Banks</label>
                                <select class="form-control" id="Banks">
                                    <option>----Select Banks-----</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="d-flex branch flex-column">
                                <label class="date-from p-0" for="inlineFormCustomSelect">Date From:</label>
                                <input type="date" asp-for="DateRecived" class="w-100" />

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <input type="text" value="" class="" readonly="readonly" />
                            </div>
                        </div>
                        <div class="col-3">
                            <input type="button" onclick="saveBatchHeader()" value="Save Batch Header" class="btn btn-primary w-100" />
                        </div>
                    </div>


                    <div class="spl">
                        <div class="demo">

                            <a href="#" id="btnAdd" onclick="showdiv()">Add New Check</a>
                            <a href="">Refresh</a>
                        </div>
                        <div class="b-demo">

                            <a href="#">CheckNumber</a>
                            <a href="#">Payer Account</a>
                            <a href="#">Payer Name</a>
                            <a href="#">Deposit Account</a>
                            <a href="#">Depositor's Name</a>
                            <a href="#">Check Amount</a>

                        </div>

                        <div class="b-demo-content">

                           

                            <div class="row mb-3 data_grp" style="display: none;" id="AddfrgnCheck">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="CheckNumber"></label>
                                 
                                        <input asp-for="CheckNumber" class="form-control" />
                                        <span asp-validation-for="CheckNumber" class="text-danger"></span>
                                    </div>
                                </div>
                              
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="PayerAcctNumber"></label>
                                   
                                        <input asp-for="PayerAcctNumber" class="form-control" />
                                        <span asp-validation-for="PayerAcctNumber" class="text-danger"></span>
                                    </div>
                                </div>
                             
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="PayerAcctName"></label>
                                    
                                        <input asp-for="PayerAcctName" class="form-control" />
                                        <span asp-validation-for="PayerAcctName" class="text-danger"></span>
                                    </div>
                                </div>
                             
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="DepositAcctNumber"></label>
                                      
                                        <input asp-for="DepositAcctNumber" class="form-control" />
                                        <span asp-validation-for="DepositAcctNumber" class="text-danger"></span>
                                    </div>
                                </div>
                             
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="DepositAcctName"></label>
                                     
                                        <input asp-for="DepositAcctName" class="form-control" />
                                        <span asp-validation-for="DepositAcctName" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="CheckAmount"></label>
                                    
                                        <input asp-for="CheckAmount" class="form-control" />
                                        <span asp-validation-for="CheckAmount" class="text-danger"></span>
                                    </div>
                                </div>
                              
                                <div class="col-md-12">
                                    <div class="form-group text-start">
                                        <input type="submit" value="Submit" class="btn btn-primary sub_btn" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




<div class="row">
    <form asp-action="UpdateFrgnCheck" method="post">
