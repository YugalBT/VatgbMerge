@model Standing_Order_Vat_App.Common.ViewModels.onlineBankingVm
@{
    ViewData["Title"] = "Online Banking";

}
<style>
    .tblsize {
        /*display: block;*/
        width: 100%;
        /*overflow: scroll;*/
        /*overflow-y: scroll;*/
        /*height: 550px;*/
    }

    .vat_summary {
        max-width: 980px;
        width: 100%;
        margin: 0 auto;
    }

    .branch label {
        padding-right: 80px;
    }

        .branch label.date-from {
            padding-right: 56px;
        }

    .branch select, .branch input {
        width: 240px;
        height: 30px;
    }

    .get_report_PDF_excel_word a, .buttons button {
        height: 36px;
        font-size: 16px;
        line-height: 22px;
    }

    .buttons input {
        margin-left: 30px;
    }

</style>
<section>
    <div class="middle-content-sec">
        <form class="formcontainer" asp-controller="OnlineBanking" asp-action="Index" method="post">
            <div class="loadingDiv"></div>
            <div class="row mb-3">
                <div class="col-lg-5">
                    <div class="d-flex branch">
                        <label for="inlineFormCustomSelect" class="date-from form-label text-end"> Date:</label>
                        <input type="date" class="form-control" asp-for="Date" />
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex">
                        <label class="form-label">Upload FTP</label>
                        <input type="checkbox" class="ms-2 form-check" asp-for="IsChecked" />
                    </div>
                </div>
                <div class="col-2 buttons d-flex justify-content-between">
                    <div class="">
                        <button type="submit" id="setmodel" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>

            <div id="divLoader" style="text-align: center; display:none;vertical-align: middle;"> <img src="~/Image/Spinner-3.gif" alt="Loader" /> </div>

        </form>
    </div>
</section>
<script>
    $("#setmodel").click(function () {
        $("#divLoader").css("display", "block")
    });
</script>

