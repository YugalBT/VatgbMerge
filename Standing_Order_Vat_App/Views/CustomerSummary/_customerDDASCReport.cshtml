@model List<Standing_Order_Vat_App.Common.ViewModels.DDASCReport_VM>

<div class="container">

    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap tblsize" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Branch</th>
                    <th>Account</th>
                    <th>Customer Name</th>
                    <th>Date</th>
                    <th>Charged</th>
                    <th>National Fees</th>
                    <th>VAT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Branch_number</td>
                        <td>@item.ACCT</td>
                        <td>@item.Customer_Name</td>
                        <td>@item.RptDate?.ToString("MM/dd/yyyy")</td>
                        <td>@item.Charged<b></b></td>
                        <td>@item.National_Fees</td>
                        <td>@item.VAT</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Count() == 0)
        {
            <div class="">
                <div class="text-center alert alert-danger_inner">
                    <p class="m-3">no record found!</p>
                </div>
            </div>
        }

        @if (Model.Count() > 0)
        {
            <div class="col-md-12">
                <div class="row">
                    <ul class="pagination">
                        @Html.Raw(ViewBag.Paging)
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function() {
        $("#example").datatable();
    });
</script>
