@model List<Standing_Order_Vat_App.Common.ViewModels.StopPayCharge_VM>

<div class="container summary_detail">
  
    @*<div style="width:90%; margin:0 auto;">*@
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap tblsize" width="100%" cellspacing="0">
            <thead>
                <tr>
                    @*<th>StopchargeId</th>*@
                    <th>Cif</th>
                    <th>Account</th>
                    <th>Date</th>
                    <th>Branch</th>
                    <th>Prof of Sequence</th>
                    <th>Check Number</th>
                    <th>Total</th>
                    <th>NationalFees</th>
                    <th>Vat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>@item.StopchargeId</td>*@
                        <td>@item.Cif</td>
                        <td>@item.Acct</td>
                        <td>@item.Dateactive?.ToString("MM/dd/yyyy")</td>
                        <td>@item.Branch</td>
                        <td>@item.ProofSequence</td>
                        <td>@item.CheckNumber</td>
                        <td>@item.TransAmt</td>
                        <td>@item.NationalFees</td>
                        <td>@item.Vat</td>
                    </tr>
                }
            </tbody>

        </table>
        @if (Model.Count() <= 0)
        {
            <div class="">
                <div class="text-center alert alert-danger_inner">
                    <p class="m-3">no record found!</p>
                </div>
            </div>
        }

        @if (Model.Count() > 0)
        {
            <div class="col-md-12">
                <div class="row">
                    <ul class="pagination" style="margin-left: 12px">
                        @Html.Raw(ViewBag.Paging)
                    </ul>
                </div>
            </div>
        }
    </div>
@*</div>*@

<script>
    $(document).ready(function() {
        $("#example").datatable();
    });
</script>
